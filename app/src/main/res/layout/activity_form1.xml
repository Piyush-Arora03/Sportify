<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".form1"
    android:orientation="vertical"
    android:background="#FFFFFF"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="APPLY AS A REFEREE/UMPIRE OR\nCOMMENTATOR"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        app:boxBackgroundMode="none"
        android:background="@drawable/boxdesign"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Name"
            android:layout_weight="1"
            android:textSize="15dp"
            android:textStyle="bold"
            android:backgroundTint="@color/white"
            android:id="@+id/name"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        app:boxBackgroundMode="none"
        android:background="@drawable/boxdesign"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="College Id"
            android:textSize="15dp"
            android:textStyle="bold"
            android:backgroundTint="@color/white"
            android:id="@+id/collegeid"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:boxBackgroundMode="none"
        android:background="@drawable/boxdesign"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Unique Id"
            android:textColorHint="#7D7D7D"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_weight="1"/>


    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        app:boxBackgroundMode="none"
        android:background="@drawable/boxdesign"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        app:endIconMode="password_toggle"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="Password"
            android:textSize="15dp"
            android:textStyle="bold"
            android:backgroundTint="@color/white"
            android:id="@+id/password"
            android:inputType="textPassword"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/boxdesign"
        />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/boxdesign"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:id="@+id/apply"
        android:background="@drawable/signingbutton"
        android:text="apply"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"/>


</LinearLayout>